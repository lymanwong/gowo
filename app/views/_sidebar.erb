<div class="col-xs-6 col-sm-4">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3>Add a workout!</h3>
    </div>
    <div class="panel-body">
      <div id="addform">
        <form action="/workouts/new" method="post">
          <label for="name">Name:</label>
          <input type="text" name="workout[name]" required />
          </br>
          <label for="body_part">Body Part:</label>
          <input type="text" name="workout[body_part]" required />
          </br>
          <label for="weight">Weight (lbs):</label>
          <input type="text" name="workout[weight]" required />
          </br>
          <label for="set">Sets:</label>
          <input type="text" name="workout[set]" required />
          </br>
          <label for="rep">Reps:</label>
          <input type="text" name="workout[rep]" required />
          </br>
          <label for="date">Date:</label>
          <input id="datecal" type="date" name="workout[date]" required />
          </br></br>
          <input type="submit" value="Add"/>
        </form>
      </div>
    </div>
  </div>
</div>
