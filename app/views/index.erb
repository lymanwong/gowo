<div id="main">
  <div id="column1">
    <h1>Welcome, <%= @user.username %>!</h1>

    <img src=<%= gravatar_url(@user)%>>
    <h1>Checkout the community's recent workouts!</h1>
    <ul>
      <% @workouts.each do |workout| %>
      <li><a href="/workouts/<%= workout.id %>"><%= workout.name %><br> Weight: <%= workout.weight %><br>  Sets: <%= workout.set %><br>  Reps: <%= workout.rep %><br> Date: <%= workout.date %></a>
      </li>
      <form action="/workouts/<%= workout.id %>" method="post">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" value="Remove">
      </form>
    </li>
    <% end %>
  </ul>
</div>
<div id="sidebar">
  <h3>Add a workout!</h3>
  <div id="addform">
    <form action="/workouts/new" method="post">
      <label for="name">Name:</label>
      <input type="text" name="workout[name]" required />
    </br>

    <label for="body_part">Body Part:</label>
    <input type="text" name="workout[body_part]" required />
  </br>

  <label for="weight">Weight (lbs):</label>
  <input type="text" name="workout[weight]" required />
</br>

<label for="set">Sets:</label>
<input type="text" name="workout[set]" required />
</br>

<label for="rep">Reps:</label>
<input type="text" name="workout[rep]" required />
</br>

<label for="date">Date:</label>
<input id="datecal" type="date" name="workout[date]" required />
</br></br>

<input type="submit" value="Add"/>
</form>
</div>
</div>
